---
import { Image } from "astro:assets";
import alvaLogo from "../../public/alvaautologo.png";

interface Experience {
  position: string;
  logo: ImageMetadata;
  company: string;
  startDate: string;
  endDate: string;
  description: string[];
  location: string;
}

const experienceHistory: Experience[] = [
  {
    position: "Manufacturing Technology Intern",
    logo: alvaLogo as ImageMetadata,
    company: "PT. Electra Mobilitias Indonesia (ALVA)",
    startDate: "Sep 2024",
    endDate: "Present",
    description: [
      "Contributed to several web-based projects, collaborating on both backend workflows and frontend development",
      "Collaborated with the team to discuss and refine business processes",
    ],
    location: "South Cikarang, West Java",
  },
];
---

<section
  id="experience"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My career</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Experience</h3>

    <div class="space-y-8">
      {
        experienceHistory.map((experience) => (
          <div class="bg-[#1414149c] border border-[var(--white-icon-tr)] rounded-xl p-6 transition-all hover:shadow-xl">
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="flex-shrink-0 mr-1">
                <div class="size-16 md:size-20 bg-white rounded-lg overflow-hidden flex items-center justify-center p-1">
                  <Image
                    src={experience.logo}
                    alt={`${experience.company} logo`}
                    class="w-full h-full object-contain"
                  />
                </div>
              </div>

              <div class="flex-grow">
                <h4 class="text-xl md:text-2xl font-semibold">
                  {experience.position}
                </h4>
                <p class="text-lg font-normal text-[var(--white)]">
                  {experience.company}
                </p>

                <div class="flex flex-col md:flex-row md:items-center text-[var(--white-icon)] mt-1 mb-3 text-sm">
                  <span>
                    {experience.startDate} - {experience.endDate}
                  </span>
                  <span class="hidden md:inline-block mx-2">â€¢</span>
                  <span>{experience.location}</span>
                </div>

                <div class="text-[var(--white)] mt-3">
                  <ul class="list-disc pl-5 space-y-1">
                    {experience.description.map((point) => (
                      <li>{point}</li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
